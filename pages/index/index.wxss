/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  background-color: #f0f0f0;
}

.section {
  margin-bottom: 40rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eeeeee;
  padding-bottom: 10rpx;
}

.announcement-scroll {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
}

.announcement-content {
  display: inline-block;
  white-space: nowrap;
  animation: scroll 10s linear infinite;
}

@keyframes scroll {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

.quick-services {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%; /* Adjust width to fit three items per row */
  margin-bottom: 20rpx;
}

.service-item text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.activities {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  margin-bottom: 20rpx;
}

.activity-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx;
}

.activity-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.activity-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.activity-description {
  font-size: 26rpx;
  color: #888888;
}

.promotions {
  display: flex;
  flex-wrap: wrap;
}

.promotion-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fafafa;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.promotion-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.promotion-info {
  padding: 20rpx;
}

.promotion-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.promotion-description {
  font-size: 24rpx;
  color: #666666;
}