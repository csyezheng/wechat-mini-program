/* pages/index/index.wxss */
.container {
  padding: 20px;
  background-color: #f9f9f9;
  text-align: center;
}

.logo {
  width: 150px;
  height: auto;
  margin: 20px auto;
}

.features {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

/* Additional styles for bottom navigation */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
}

.nav-item {
  text-align: center;
}

.icon {
  width: 24px;
  height: 24px;
}

.label {
  font-size: 12px;
  color: #333;
}
