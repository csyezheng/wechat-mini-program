<!-- pages/profile/profile.wxml -->
<view class="container">
  <view class="profile-header">
    <navigator url="/pages/notification/notification" class="notification-item">
      <image src="/images/icons/chat.png" class="notification-icon" />
    </navigator>
    <navigator url="/pages/settings/settings" class="settings-item">
      <image src="/images/icons/settings.png" class="settings-icon" />
    </navigator>
  </view>

  <view class="profile-content">
    <!-- User Info -->
    <view class="user-info">
      <image class="avatar" src="/images/default-avatar.png" />
      <view class="info">
        <text class="username">用户名</text>
        <text class="email">user@example.com</text>
      </view>
    </view>

    <!-- User Stats -->
    <view class="user-stats">
      <view class="stat-item">
        <text class="stat-number">{{followers}}</text>
        <text class="stat-label">关注者</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{fans}}</text>
        <text class="stat-label">粉丝</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{favorites}}</text>
        <text class="stat-label">收藏</text>
      </view>
    </view>
    
    <!-- Features -->
    <view class="features">
      <navigator url="/pages/reminder/reminder" class="feature-item">
        <image src="/images/icons/reminder-icon.png" class="feature-icon" />
        <text class="feature-name">提醒</text>
      </navigator>
      <navigator url="/pages/note/note" class="feature-item">
        <image src="/images/icons/note-icon.png" class="feature-icon" />
        <text class="feature-name">笔记</text>
      </navigator>
      <navigator url="/pages/bookkeeping/bookkeeping" class="feature-item">
        <image src="/images/icons/bookkeeping-icon.png" class="feature-icon" />
        <text class="feature-name">记账</text>
      </navigator>
    </view>

    <!-- Settings -->
    <!-- <view class="settings">
      <navigator url="/pages/settings/settings" class="setting-item">
        <text>Account Settings</text>
      </navigator>
      <navigator url="/pages/privacy/privacy" class="setting-item">
        <text>Privacy Policy</text>
      </navigator>
      <navigator url="/pages/help/help" class="setting-item">
        <text>Help & Support</text>
      </navigator>
    </view> -->

  </view>

  <!-- <bottom-nav current="profile" bind:change="onNavChange" /> -->
</view>
