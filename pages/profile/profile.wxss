/* pages/profile/profile.wxss */
.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.profile-header {
  position: relative;
  padding: 10px;
  background-color: #f8f8f8;
  margin-bottom: 10px;
}

.notification-item {
  position: absolute;
  left: 160px; /* Adjust left position for notification icon */
  top: 0%; /* Align vertically */
  transform: translateY(-50%); /* Center vertically */
}

.notification-icon {
  width: 24px;
  height: 24px;
}

.settings-item {
  position: absolute;
  right: 160px; /* Adjust right position for settings icon */
  top: 0%; /* Align vertically */
  transform: translateY(-50%); /* Center vertically */
}

.settings-icon {
  width: 24px;
  height: 24px;
}

.profile-content {
  width: 100%;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
  margin-right: 10px;
}

.username {
  font-size: 20px;
  font-weight: bold;
  display: block;
}

.email {
  font-size: 12px;
  color: #666;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 20px;
  font-weight: bold;
}

.stat-label {
  font-size: 14px;
  color: #888;
}

.features {
  display: flex;
  flex-wrap: wrap; /* Allow items to wrap */
  justify-content: space-between; /* Space between items */
  margin-bottom: 10px;
}

.feature-item {
  width: 20%; /* Adjust width as needed */
  padding: 15px;
  /* background-color: #f0f0f0; */
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center; /* Center items */
  flex-direction: column;
}

.feature-icon {
  width: 40px; /* Adjust size */
  height: 40px; /* Adjust size */
  margin-bottom: 5px;
}